<header class="sticky top-0 w-full px-8 py-4 h-16 leading-8">
  <div class="flex items-center justify-between">
    <div class="flex space-x-12">
      <div class="hover:text-blue-600">
        <a href="<%= Rails.application.routes.url_helpers.home_index_path %>">Set</a>
      </div>
    </div>
    <div class="flex space-x-12 items-center">
      <% if current_account %>
        <p class="text-nowrap font-medium text-purple-500"><%= current_account.username %></p>
      <% end %>

      <% if current_account %>
        <div class="hover:text-blue-600">
          <a href="<%= Rails.application.routes.url_helpers.dashboard_index_path %>">Dashboard</a>
        </div>
      <% end %>

      <% if current_account %>
        <div class="hover:text-blue-600">
          <a href="<%= Rails.application.routes.url_helpers.dashboard_index_path %>">Profile</a>
        </div>
      <% end %>

      <% unless current_account %>
        <a
          class="w-full px-6 py-2 cursor-pointer font-semibold text-sm rounded-md bg-purple-300 hover:bg-purple-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-300"
          href="<%= rodauth.login_path %>"
        >
          Login
        </a>
      <% end %>

      <% if current_account %>
        <%= render "rodauth/logout" %>
      <% end %>
    </div>
  </div>
</header>